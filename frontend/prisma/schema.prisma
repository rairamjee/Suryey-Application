generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  userId Int @id @default(autoincrement())
  userName String 
  userEmail String @unique
  userPassword String 
  userDesignation String @default("USER")
}

model Survey{
  surveyId Int @id @default(autoincrement())
  surveyName String
  surveyDescription String
  startDate DateTime 
  endDate DateTime
}

enum QuestionType {
  INPUT
  MCQ
  RATING
  TF
}


model Question {
  questionId   Int           @id @default(autoincrement())
  questionName String
  questionType QuestionType 
  questionOption String[]
  surveyId Int
}


